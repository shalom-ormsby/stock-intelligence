{
  "version": 2,
  "functions": {
    "api/analyze.ts": {
      "maxDuration": 300
    },
    "api/webhook.ts": {
      "maxDuration": 60
    },
    "api/health.ts": {
      "maxDuration": 10
    },
    "api/page/analyze.ts": {
      "maxDuration": 10
    },
    "api/cron/scheduled-analyses.ts": {
      "maxDuration": 800
    }
  },
  "crons": [
    {
      "path": "/api/cron/scheduled-analyses",
      "schedule": "0 13 * * *"
    }
  ],
  "buildCommand": "npm run type-check",
  "rewrites": [
    {
      "source": "/analyze.html",
      "destination": "/api/page/analyze"
    },
    {
      "source": "/analyze",
      "destination": "/api/page/analyze"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET,POST,OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type, Authorization, X-API-Key" },
        { "key": "Cache-Control", "value": "public, max-age=0, must-revalidate" }
      ]
    }
  ]
}